<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#9a0034</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="MyTabStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="searchStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#040a0b</item>
    </style>

    <style name="menu_style">
        <item name="android:textColor">#c2c2c2</item>
    </style>

    <style name="settingMenuStyle" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@android:color/holo_green_light</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
